<p id="notice"><%= notice %></p>

<h1>Routes</h1>

<!--<div class="container">-->
    <div class="row col-md-6 col-md-offset-2 custyle">
    <table class="table table-striped custab">
    <thead>
        <tr>
            <th>Route Title</th>
            <th>User</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>

      <% @routes.each do |route| %>
        <tr>
          <td><%= route.title %></td>
          <td><%= route.user.username %></td>
          <td><%= link_to 'Show', route %></td>

          <td class="text-center"><%= link_to 'Edit', edit_route_path(route), :class=>"btn btn-info btn-xs" %><span class="glyphicon glyphicon-edit"></span><%= link_to 'Delete', route, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger btn-xs" %><span class="glyphicon glyphicon-remove"></span></td>
        </tr>
      <% end %>

    </table>
    <!--</div>-->
</div>


